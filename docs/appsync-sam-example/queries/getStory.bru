meta {
  name: getStory
  type: graphql
  seq: 2
}

post {
  url: {{base-url}}
  body: graphql
  auth: bearer
}

auth:bearer {
  token: Auth
}

body:graphql {
  query getStory($storyId: ID!) {
    getStory(storyId: $storyId) {
      story {
        id
        title
        content
        createdAt
      }
      comments {
        id
        storyId
        comment
        createdAt
      }
    }
  }
}

body:graphql:vars {
  {
    "storyId": "story-id-here"
  }
}
