{
    "name": "appsync-sam-example",
    "version": "1.0.0",
    "author": "SAM CLI",
    "license": "MIT",
    "scripts": {
        "lint": "eslint 'src/**/*.ts' --fix",
        "build": "tsc",
        "style": "prettier --write '**'",
        "pre-push": "npm run lint && npm run build",
        "codegen": "graphql-codegen --config codegen.ts",
        "prebuild-resolvers": "rm -rf src/resolvers/dist",
        "build-resolvers": "node src/graphql/resolvers/build/index.mjs",
        "merge-schema": "node src/graphql/schema/merge/index.mjs",
        "build-all": "run-s build build-resolvers codegen merge-schema"
    },
    "dependencies": {
        "esbuild": "^0.17.14"
    },
    "devDependencies": {
        "@aws-appsync/eslint-plugin": "^1.4.0",
        "@aws-appsync/utils": "^1.5.0",
        "@aws-sdk/client-dynamodb": "^3.388.0",
        "@aws-sdk/client-s3": "^3.388.0",
        "@aws-sdk/s3-request-presigner": "^3.388.0",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/graphql-modules-preset": "^4.0.1",
        "@graphql-codegen/typescript": "^4.0.1",
        "@graphql-tools/load-files": "^7.0.0",
        "@graphql-tools/merge": "^9.0.0",
        "@types/aws-lambda": "^8.10.122",
        "@types/node": "^18.11.4",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.62.0",
        "esbuild-plugin-eslint": "^0.3.6",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "glob": "^10.3.10",
        "graphql": "^16.8.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
