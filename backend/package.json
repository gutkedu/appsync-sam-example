{
    "name": "appsync-sam-example",
    "version": "1.0.0",
    "author": "SAM CLI",
    "license": "MIT",
    "scripts": {
        "lint": "eslint 'src/**/*.ts' --fix",
        "build": "tsc",
        "style": "prettier --write '**'",
        "pre-push": "npm run lint && npm run build",
        "codegen": "graphql-codegen --config codegen.ts",
        "prebuild-resolvers": "rm -rf src/resolvers/dist",
        "build-resolvers": "node src/graphql/build/build-resolvers.mjs",
        "merge-schema": "node src/graphql/build/merge-schema.mjs",
        "build-all": "run-s build build-resolvers codegen merge-schema"
    },
    "dependencies": {
        "esbuild": "^0.25.10"
    },
    "devDependencies": {
        "@aws-appsync/eslint-plugin": "^2.0.2",
        "@aws-appsync/utils": "^2.0.3",
        "@graphql-codegen/cli": "^6.0.0",
        "@graphql-codegen/graphql-modules-preset": "^5.0.0",
        "@graphql-codegen/typescript": "^5.0.0",
        "@graphql-tools/load-files": "^7.0.1",
        "@graphql-tools/merge": "^9.1.1",
        "@types/aws-lambda": "^8.10.152",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.8.0",
        "glob": "^11.0.3",
        "graphql": "^16.8.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2"
    }
}
